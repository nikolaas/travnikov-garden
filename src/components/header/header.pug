mixin header
    header.c-header.clearfix&attributes(attributes)
        .container
            .row
                .col-sm-2
                    span.c-header__phone-section
                        i.c-header__icon.c-header__icon--contact.fa.fa-phone
                        a.c-header__link.c-header__link--tel(href="tel:+79151917707") +7 915 191 77 07
                .col-sm-2
                    a.c-header__email-section.c-header__link(href="mailto:circleplease@gmail.com" target="_top")
                        i.c-header__icon.c-header__icon--contact.fa.fa-envelope
                        span circleplease@gmail.com
                .col-sm-4.c-header__social-section
                    a.c-header__link.c-header__link--icon.c-header__icon.fa.fa-vk(href="#")
                    a.c-header__link.c-header__link--icon.c-header__icon.fa.fa-facebook(href="#")
                    a.c-header__link.c-header__link--icon.c-header__icon.fa.fa-tripadvisor(href="#")
                    a.c-header__link.c-header__link--icon.c-header__icon.fa.fa-instagram(href="#")
                .col-sm-4.c-header__partner-section
                    a.c-header__link(href="http://www.mospriroda.ru") www.mospriroda.ru
                    //span.c-header__languages-section
                        a.c-header__link.c-header__language(href="#") EN
                        span |
                        span.c-header__language.c-header__element--active-language RU