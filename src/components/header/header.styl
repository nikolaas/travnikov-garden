@import '../../styles/colors';
@import '../../styles/sizes.styl';

header-height = 50px;
header-text-size = 12px
header-text-size-min = 10px
header-contact-icon-size = 16px
header-contact-icon-color = #6fba57
header-social-icon-size = 18px
header-language-size = 14px

.c-header {
  background-color $accent-background-color
  color $accent-text-color
  font-size header-text-size
  text-align center
  padding 5px 0
  line-height 30px
  white-space nowrap
  @media (min-width: $portrait-tablet-width) {
    line-height header-height
    height header-height
    text-align left
    padding 0
  }
  @media (min-width: $portrait-tablet-width) and (max-width: $notebook-width){
    font-size header-text-size-min
  }
}

.c-header__phone-section {
  //float left
  display block
  @media (min-width: $portrait-tablet-width) {
    display inline
  }
}

.c-header__email-section {
}

.c-header__social-section {
  display none
  text-align center
  font-size header-social-icon-size
  @media (min-width: $portrait-tablet-width) {
    display block
  }
}

.c-header__partner-section {
  @media (min-width: $portrait-tablet-width) {
    text-align right
  }
}

.c-header__languages-section {
  font-size header-language-size
  float right
}

.c-header__icon,
.c-header__language {
  padding-left 5px
  padding-right 5px

  &:first-child {
    padding-left 0
  }

  &:last-child {
    padding-right 0
  }
}

.c-header__icon--contact {
  font-size header-contact-icon-size
  color header-contact-icon-color
}

.c-header__element--active-language {
  text-decoration underline
}

.c-header__link {
  color $accent-text-color
  text-decoration underline

  &:focus,
  &:visited,
  &:active,
  &:hover {
    color $accent-text-color
    text-decoration none
  }
}

.c-header__link--icon {
  text-decoration none
  &:hover {
      text-decoration none
  }
}
.c-header__link--tel{
  text-decoration none
  color $accent-text-color
  &:focus,
  &:visited,
  &:active,
  &:hover {
    text-decoration none
  }
}