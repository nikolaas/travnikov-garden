@import '../../styles/colors';

header-height = 50px;
header-text-size = 12px
header-contact-icon-size = 16px
header-contact-icon-color = #6fba57
header-social-icon-size = 18px
header-language-size = 14px

.c-header {
  height header-height
  background-color accent-background-color;
  color accent-text-color
  font-size header-text-size
}

.c-header__link {
  color accent-text-color

  &:focus,
  &:visited,
  &:active,
  &:hover {
    color accent-text-color
  }
}

.c-header__element {
  display inline-block
  line-height header-height
  padding-left 5px
  padding-right 5px

  &:first-child {
    padding-left 0
  }

  &:last-child {
    padding-right 0
  }
}

.c-header__element--contact-icon {
  font-size header-contact-icon-size
  color header-contact-icon-color
}

.c-header__element--social {
  font-size header-social-icon-size

  &:hover {
    text-decoration none
  }
}

.c-header__language {
  font-size header-language-size
}

.c-header__language--active {
  text-decoration underline
}