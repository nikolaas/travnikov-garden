@import '../../styles/colors.styl';

$gallery-width = 100%;
$gallery-height = 450px;

.c-ours-plants {
  padding 0 0 70px
}

.c-ours-plants__section-icon {
  background url('../../resources/images/ours-plants.png') no-repeat center
  width 59px
  height 50px
  display block
}

.c-ours-plants__gallery {
  margin-top 40px
  margin-bottom 50px
  width 100%
  overflow hidden

  &::after {
    content ''
    display block
    clear both
  }
}

.c-ours-plants__gallery-item {
  width 20%
  height 225px
  float left
  overflow hidden
  background-size cover

  &:hover {
    .c-hovered-flower {
      opacity: 1;
      transform: scale(1);
    }
  }
}

.c-ours-plants__gallery-item-link {
  background url("../../resources/images/plus.png") no-repeat center
}

@media(max-width 768px) {
  .c-ours-plants__gallery-item {
    width 50%
  }
}

@media(max-width 480px) {
  .c-ours-plants__gallery-item {
    width 100%
  }
}

















