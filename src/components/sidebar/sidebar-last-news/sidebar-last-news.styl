@import '../../../styles/colors.styl';

$news-date-color = #8a8a8a;

.sidebar-last-news__news-item {
  display block
  margin-bottom 25px
  overflow hidden
  color inherit

  &:visited,
  &:active,
  &:hover {
    text-decoration none;
    color inherit
  }
}

.sidebar-last-news__news-photo-container {
  float left
  width 70px
}

.sidebar-last-news__news-photo {
  width 100%
}

.sidebar-last-news__news-content {
  margin-left 84px
  font-size 14px
}

.sidebar-last-news__news-short-text {
  line-height 16px
  margin-bottom 10px
}

.sidebar-last-news__news-date {
  font-size 12px
  color $news-date-color
}

.sidebar-last-news__more_news {
  display block
  color $common-text-color
  text-decoration underline
  font-size 14px
  text-align center

  &:visited,
  &:active,
  &:hover {
    color $common-text-color
  }
}