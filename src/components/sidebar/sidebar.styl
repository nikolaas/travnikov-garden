@import '../../styles/colors.styl';
.sidebar-item{
  margin-bottom 40px

  &-title{
    color $common-text-color = #367622
    text-transform uppercase
    font-size 18px
    text-align center
    position relative
    font-family 'Georgia'
    margin-bottom 30px
    &::after{
      content ''
      display block
      position absolute
      width 120px
      height 2px
      bottom -10px
      left 50%
      margin-left -60px
      background $common-border-color
    }
  }
}