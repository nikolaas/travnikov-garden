@import '../../styles/colors.styl';

.sidebar {
  padding-left 15px
  position relative
  &::after {
    content ''
    display block
    width 1px
    background $minor-border-color
    position absolute
    top 0
    left 0
    bottom -9999px
  }
}
.sidebar-item {
  margin-bottom 40px

  &-title {
    color $common-text-color = #367622
    text-transform uppercase
    font-size 18px
    text-align center
    position relative
    font-family 'Georgia'
    margin-bottom 30px
    &::after {
      content ''
      display block
      position absolute
      width 120px
      height 2px
      bottom -10px
      left 50%
      margin-left -60px
      background $common-border-color
    }
  }
}