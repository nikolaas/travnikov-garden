@import '~sprite';
@import '../../styles/colors';
@import '../../styles/mixins';

navigation-items-count = 9;

.c-navigation {
  padding-top 10px;
  padding-bottom 10px;
  background-color common-background-color;
  color common-text-color
  font-family Georgia
  font-size 14px
}

.c-navigation__menu {
  line-height $logo_height
  text-align justify
  text-align-last: justify;
}

