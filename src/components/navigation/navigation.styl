}

.c-navigation__logo {
  text-align center
}

.c-navigation__logo-link {
  sprite($logo);
  display inline-block
}

.c-navigation__link {
  animated();
  text-transform uppercase
  color common-text-color
  padding 10px 5%
  white-space nowrap

  &:focus,
  &:visited {
    color common-text-color
  }

  &:active,
  &:hover {
    background-color accent-background-color
    color accent-text-color
    text-decoration none
  }
}

