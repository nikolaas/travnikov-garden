@import '../../styles/colors.styl';

$footer-background-color = #272727;
$footer-text-color = #c9c9c9;
$copyright-background = #313131;

.footer {
  background $footer-background-color
  color $accent-text-color
}

.footer__map {
  width 100%
  height 460px
}

.footer__contacts {
  background $accent-background-color
}

.footer__contact {
  padding-top 25px
  padding-bottom 25px

  &:after {
    content ''
    display block
    clear both
  }
}

.footer__contact-icon {
  position relative
  float left
  width 50px
  height 50px
  line-height 50px
  margin 5px 25px
  border 1px solid
  border-radius 100%
  font-size 24px

  .fa {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }
}

.footer__contact-body {
  float left
}

.footer__contact-title {
  font-family 'Georgia'
  font-size 24px
}

.footer__contact-content {
  font-family 'Open Sans'
  font-size 14px
}

.footer__contact-content-row {
  display block
  color $accent-text-color

  &:focus,
  &:visited,
  &:active,
  &:hover {
    color $accent-text-color
  }
}

.footer__info {
  margin-top 70px
  margin-bottom 70px
}

.footer__info-title {
  font-family 'Georgia'
  font-size 24px
  margin-bottom 20px
}

.footer__info-content {
  margin-bottom 20px
  color $footer-text-color
  line-height 30px
}

.footer__link {
  color $footer-text-color

  &:focus,
  &:visited,
  &:active,
  &:hover {
    color $footer-text-color
    text-decoration none
  }
}

.footer__link--mospriroda {
  margin-left 5px
  text-decoration underline

  &:focus,
  &:visited,
  &:active,
  &:hover {
    text-decoration underline
  }
}

.footer__social-links {
  &:after {
    content ''
    display block
    clear both
  }
}

.footer__social-link {
  position relative
  float left
  width 50px
  height 50px
  margin-right 30px
  border 1px solid
  border-radius 100%
  color $accent-text-color
  font-size 24px

  &:focus,
  &:visited,
  &:active,
  &:hover {
    color $accent-text-color
    text-decoration none
  }

  .fa {
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
  }
}

.footer__menu {
  padding 0
  list-style none
}

.footer__copyright {
  background-color $copyright-background
  color $footer-text-color
  font-size 16px
  line-height 70px
}

.footer__copyright-data {
  text-align left
}

.footer__development {
  text-align right
}
