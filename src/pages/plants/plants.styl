@import '../../styles/colors.styl';

.c-plants-page__content {
  padding-bottom 0
}

.c-plants-page__scene {
  background-image url('../../resources/images/header-plants.jpg')
}

.c-plants-page__icon {
  background url('../../resources/images/ours-plants.png') no-repeat center
  width 59px
  height 50px
  display block
}

.c-plants-page__subsections {
  margin-top 70px
}

.row-centered {
  text-align:center;
}

.col-centered {
  display:inline-block;
  float:none;
  /* reset the text-align */
  text-align:left;
  /* inline-block space fix */
  margin-right:-4px;
}

.c-plants-page__subsection {
  margin-bottom 70px
}

.c-plants-page__subsection_link {
  display block
  position relative
  overflow hidden

  &:after {
    content ''
    display block
    position absolute
    top -50%
    left -50%
    width 200%
    height 200%
    transition all 0.4s ease-in-out
    -webkit-backface-visibility: hidden
    opacity 0
    transform scale(0)
    background-color $hover-background-color
    z-index 10
    border-radius 100%
  }

  &:hover {
    &:after {
      opacity 1
      transform scale(1)
    }
  }
}

.c-plants-page__subsection-image {
  width 100%
}

.c-plants-page__subsection-sketch {
  position absolute
  right 0
  bottom 0
  z-index 30
}

.c-plants-page__subsection-title {
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 225px
  height 225px
  padding 65px 0 65px 30px
  border 2px solid $accent-border-color
  color $accent-text-color
  text-transform uppercase
  font-size 24px
  font-weight 500
  z-index 20
}

.c-plants-page__subsection-title-text {
  position absolute
  top 50%
  transform translateY(-50%)

  &::before,
  &::after {
    content ''
    display block
    width 100px
    height 2px
    background-color $common-background-color
  }

  &::before {
    margin-bottom 35px
  }

  &::after {
    margin-top 35px
  }
}

.c-plants-page__subsection_description {
  margin-top 30px
}
