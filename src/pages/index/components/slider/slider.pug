mixin slider(items)
    .c-slider.carousel.slide.carousel-fade()&attributes(attributes)
        ol.carousel-indicators
            each item, index in items
                li(class=index == 0 ? 'active' : '' data-target='#' + attributes.id data-slide-to=index)
        .carousel-inner(role="listbox")
            each item, index in items
                -const background = "background-image:url(" + item.src+ ")";
                div(class=index == 0 ? 'item active' : 'item')
                    //img.d-block.img-fluid(src=item.src alt=item.title)
                    div.d-block.img-fluid.c-slider__image(style=background)
                    .container.carousel-item
                        .row
                            .col-lg-6
                                .carousel__item-title= item.title
                                .carousel__item-description= item.description
                                a.btn.btn-default.carousel__item-more(href='#') Подробнее
        a.left.carousel-control(href='#' + attributes.id role="button" data-slide="prev")
            span.carousel-control__chevron.fa.fa-angle-left(aria-hidden="true")
            span.sr-only Previous
        a.right.carousel-control(href='#' + attributes.id role="button" data-slide="next")
            span.carousel-control__chevron.fa.fa-angle-right(aria-hidden="true")
            span.sr-only Next
