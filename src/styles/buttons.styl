@import './colors.styl'

.c-section-button-center {
  text-align center
  margin-top 50px
}
.btn {
  border none
  border-radius 0
  padding 15px 30px
  outline none
}

.btn-default {
  background-color $accent-background-color
  color $accent-text-color
  font-size 16px
  text-transform uppercase
  font-weight 500
  transition all ease 0.3s

  &:focus {
    background-color $accent-background-color
    color $accent-text-color
    outline none
  }

  &:hover {
    background-color lighten($accent-background-color, 10%)
    color $accent-text-color
  }

  &:active
  &:active:focus,
  &:active:hover {
    background-color lighten($accent-background-color, 20%)
    color $accent-text-color
    outline none
  }
}

.btn-accent {
  background transparent
  border 1px solid $accent-border-color
  color: $accent-text-color
  outline none
  text-transform uppercase
  font-weight 500
  padding 5px 30px
  transition all ease 0.3s

  &:hover,
  &:active
  &:active:focus,
  &:active:hover {
    color $common-text-color
    border 1px solid $accent-border-color
    background $accent-text-color
    outline none
  }
}